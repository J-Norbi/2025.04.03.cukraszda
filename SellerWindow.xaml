<Window x:Class="_2025._04._03._cukrászda.SellerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025._04._03._cukrászda"
        mc:Ignorable="d"
        Title="SellerWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Süti létrehozása" Grid.ColumnSpan="2"/>
        <Label/>
        <Label/>
        <Label/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="NameInput" Text="Dobostorta"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="PictureInput" Text="http://daubnercukraszda.hu/sites/default/files/imagecache/node350/nosztalgia_dobos_tortaszelet_1.png"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="DescriptionInput" Text=""/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="AllergenesInput" Text="glutén"/>
        <TextBox Grid.Row="5" Grid.Column="1" Name="PriceInput" Text="1000"/>
        <TextBox Grid.Row="6" Grid.Column="1" Name="StockInput" Text="10"/>
        <Button Grid.Row="7" Grid.ColumnSpan="2" Content="Sütemény létrehozása" Click="AddCake"/>
    </Grid>
</Window>
